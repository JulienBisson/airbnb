<div class="form-animals-index">
  <form>
    <label for="animal">Select your animal:</label>
    <select id="animal" name="animal">
      <% @animals.each do |animal| %>
        <option value="<%= animal.id %>"><%= animal.name %></option>
      <% end %>
    </select>
    <label for="start-date">Start Date</label>
    <input type="date" id="start-date" name="start-date">
    <label for="end-date">End Date</label>
    <input type="date" id="end-date" name="end-date">
    <input type="submit" value="Search">
  </form>
</div>

<div class="animals-container">
  <% @animals.each do |animal| %>
    <div class="card-product">
    <%= link_to animal_path(animal) do %>
      <%= cl_image_tag animal.photo.key, width:300 %>
      <div class="card-product-infos">
        <div class='product-name-localisation'>
          <%= animal.name %>
          <p>📍<%= animal.localisation %></p>
        </div>
        <div class='card-price-capacity'>
          <h6 class="price">💰<%= animal.price_per_day.to_i %>$/day</h6>
          <div class='beast-capacity'>
            <% if animal.can_fly %>
            <span class='beast-capacity-icon'>🪽</span>
            <% end %>
            <% if animal.can_walk %>
            <span class='beast-capacity-icon'>🐾</span>
            <% end %>
            <% if animal.can_swim %>
            <span class='beast-capacity-icon'>🌊</span>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
</a>
